      "display_300x250": {
        "format_id": "display_300x250",
        "type": "display",
        "description": "Medium Rectangle banner",
        "assets": [
          {
            "asset_type": "image",
            "required": true,
            "requirements": {
              "dimensions": "300x250",
              "file_types": ["jpg", "png", "gif"],
              "max_file_size": "200KB"
            }
          },
          {
            "asset_type": "clickthrough_url",
            "required": true,
            "requirements": {
              "type": "url",
              "must_be_https": true
            }
          }
        ],
        "is_3p_served": false
      },
