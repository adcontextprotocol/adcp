{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "AdCP Standard Creative Formats",
  "version": "1.0.0",
  "description": "Authoritative list of standard creative formats for Ad Context Protocol",
  "lastUpdated": "2024-01-30",
  "formats": {
    "video": {
      "video_standard_1080p": {
        "format_id": "video_standard_1080p",
        "name": "Standard HD Video",
        "type": "video",
        "description": "Standard 1080p video ad",
        "specs": {
          "resolution": "1920x1080",
          "duration": "15s or 30s",
          "file_format": "MP4",
          "max_file_size": "50MB"
        },
        "delivery_options": {
          "hosted": {
            "supported": true,
            "description": "Direct URL to video file"
          },
          "vast": {
            "supported": true,
            "versions": ["3.0", "4.0", "4.1", "4.2"],
            "features": ["linear", "skippable", "companions"]
          },
          "vpaid": {
            "supported": false,
            "reason": "Security and performance concerns"
          }
        }
      },
      "video_vertical_mobile": {
        "format_id": "video_vertical_mobile",
        "name": "Vertical Mobile Video",
        "type": "video",
        "description": "Full-screen vertical video for mobile",
        "specs": {
          "resolution": "1080x1920 (9:16)",
          "duration": "6s, 15s, or 30s",
          "file_format": "MP4",
          "features": ["skippable after 5s", "sound off by default"]
        },
        "delivery_options": {
          "hosted": {
            "supported": true
          },
          "vast": {
            "supported": true,
            "versions": ["4.0+"],
            "required_extensions": ["OMID for viewability"]
          }
        }
      },
      "video_ctv_standard": {
        "format_id": "video_ctv_standard",
        "name": "Connected TV Video",
        "type": "video",
        "description": "Standard CTV/OTT video ad",
        "specs": {
          "resolution": "1920x1080 or 3840x2160 (4K)",
          "duration": "15s, 30s, or 60s",
          "file_format": "MP4",
          "features": ["non-skippable", "sound on by default"]
        },
        "delivery_options": {
          "vast": {
            "supported": true,
            "versions": ["4.0+"],
            "required": true,
            "features": ["ad pods", "server-side ad insertion"]
          }
        }
      }
    },
    "audio": {
      "audio_streaming": {
        "format_id": "audio_streaming",
        "name": "Streaming Audio Ad",
        "type": "audio",
        "description": "Audio ad for music/podcast streaming",
        "specs": {
          "duration": "15s, 30s, or 60s",
          "file_format": "MP3 or M4A",
          "bitrate": "128kbps minimum",
          "companion_banner": "640x640 optional"
        },
        "delivery_options": {
          "hosted": {
            "supported": true,
            "description": "Direct URL to audio file"
          },
          "vast": {
            "supported": true,
            "versions": ["4.1+"],
            "notes": "Audio delivered via VAST MediaFile"
          },
          "daast": {
            "supported": false,
            "reason": "Deprecated in favor of VAST 4.1"
          }
        }
      },
      "audio_podcast": {
        "format_id": "audio_podcast",
        "name": "Podcast Ad",
        "type": "audio",
        "description": "Dynamic ad insertion for podcasts",
        "specs": {
          "duration": "15s, 30s, 60s, or host-read",
          "file_format": "MP3",
          "bitrate": "128kbps minimum",
          "insertion_type": ["pre-roll", "mid-roll", "post-roll"]
        },
        "delivery_options": {
          "hosted": {
            "supported": true,
            "required": true
          },
          "vast": {
            "supported": true,
            "versions": ["4.1+"]
          }
        }
      }
    },
    "display": {
      "display_banner_728x90": {
        "format_id": "display_banner_728x90",
        "name": "Leaderboard Banner",
        "type": "display",
        "description": "Standard leaderboard banner",
        "specs": {
          "dimensions": "728x90",
          "file_format": "JPG, PNG, or HTML5",
          "max_file_size": "200KB",
          "animation": "15s max"
        },
        "delivery_options": {
          "hosted": {
            "supported": true
          },
          "html": {
            "supported": true,
            "container": "SafeFrame or friendly iframe"
          },
          "mraid": {
            "supported": false,
            "reason": "Desktop format"
          }
        }
      },
      "display_mobile_320x50": {
        "format_id": "display_mobile_320x50",
        "name": "Mobile Banner",
        "type": "display",
        "description": "Standard mobile banner",
        "specs": {
          "dimensions": "320x50",
          "file_format": "JPG, PNG, or HTML5",
          "max_file_size": "50KB"
        },
        "delivery_options": {
          "hosted": {
            "supported": true
          },
          "mraid": {
            "supported": true,
            "versions": ["2.0", "3.0"],
            "features": ["expand", "resize"]
          }
        }
      },
      "display_native_feed": {
        "format_id": "display_native_feed",
        "name": "Native In-Feed",
        "type": "display",
        "subtype": "native",
        "description": "Native ad matching feed content style",
        "specs": {
          "components": {
            "title": "25 chars",
            "description": "90 chars",
            "image": "1200x627",
            "logo": "200x200",
            "cta": "15 chars"
          }
        },
        "delivery_options": {
          "native": {
            "supported": true,
            "protocol": "OpenRTB Native 1.2"
          }
        }
      }
    },
    "rich_media": {
      "rich_interstitial": {
        "format_id": "rich_interstitial",
        "name": "Rich Media Interstitial",
        "type": "rich_media",
        "description": "Full-screen interactive ad",
        "specs": {
          "dimensions": "responsive",
          "file_format": "HTML5",
          "max_initial_load": "1MB",
          "features": ["touch gestures", "accelerometer", "video"]
        },
        "delivery_options": {
          "mraid": {
            "supported": true,
            "versions": ["3.0"],
            "required": true
          }
        }
      }
    },
    "dooh": {
      "dooh_digital_billboard": {
        "format_id": "dooh_digital_billboard",
        "name": "Digital Billboard",
        "type": "dooh",
        "description": "Large format digital out-of-home",
        "specs": {
          "resolution": "1920x1080 minimum",
          "duration": "8s rotation",
          "file_format": "JPG or MP4",
          "features": ["weather triggers", "time-based creative"]
        },
        "delivery_options": {
          "hosted": {
            "supported": true,
            "required": true
          },
          "programmatic": {
            "supported": true,
            "protocol": "OpenRTB DOOH 1.0"
          }
        }
      }
    }
  },
  "delivery_protocols": {
    "vast": {
      "name": "Video Ad Serving Template",
      "current_version": "4.2",
      "documentation": "https://iabtechlab.com/standards/vast/"
    },
    "mraid": {
      "name": "Mobile Rich Media Ad Interface Definitions",
      "current_version": "3.0",
      "documentation": "https://iabtechlab.com/standards/mraid/"
    },
    "native": {
      "name": "OpenRTB Native",
      "current_version": "1.2",
      "documentation": "https://iabtechlab.com/standards/openrtb-native/"
    }
  }
}