{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "/schemas/deals/get-deals-response.json",
  "title": "Get Deals Response",
  "description": "Response payload for get_deals task",
  "type": "object",
  "properties": {
    "deals": {
      "type": "array",
      "description": "Array of matching deal packages",
      "items": {
        "$ref": "/schemas/core/deal.json"
      }
    },
    "errors": {
      "type": "array",
      "description": "Task-specific errors and warnings (e.g., deal discovery or pricing issues)",
      "items": {
        "$ref": "/schemas/core/error.json"
      }
    },
    "context": {
      "type": "object",
      "description": "Initiator-provided context echoed inside the task payload. Opaque metadata such as UI/session hints, correlation tokens, or tracking identifiers.",
      "additionalProperties": true
    }
  },
  "required": ["deals"],
  "additionalProperties": false
}
