{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "/schemas/portfolio/delete-portfolio-response.json",
  "title": "Delete Portfolio Response",
  "description": "Response payload for delete_portfolio task",
  "type": "object",
  "properties": {
    "portfolio_id": {
      "type": "string",
      "description": "Unique identifier for the deleted portfolio"
    },
    "mode": {
      "type": "string",
      "enum": ["archive", "permanent"],
      "description": "Deletion mode that was applied"
    },
    "deleted_at": {
      "type": "string",
      "format": "date-time",
      "description": "When the deletion occurred"
    },
    "errors": {
      "type": "array",
      "description": "Task-specific errors and warnings",
      "items": {
        "$ref": "/schemas/core/error.json"
      }
    },
    "context": {
      "$ref": "/schemas/core/context.json"
    },
    "ext": {
      "$ref": "/schemas/core/ext.json"
    }
  },
  "required": ["portfolio_id", "mode"],
  "additionalProperties": true
}
