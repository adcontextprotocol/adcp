{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "/schemas/portfolio/list-portfolios-response.json",
  "title": "List Portfolios Response",
  "description": "Response payload for list_portfolios task",
  "type": "object",
  "properties": {
    "portfolios": {
      "type": "array",
      "description": "Creative sets matching the query (metadata only, no ad_tags)",
      "items": {
        "type": "object",
        "properties": {
          "portfolio_id": {
            "type": "string"
          },
          "name": {
            "type": "string"
          },
          "description": {
            "type": "string"
          },
          "archived": {
            "type": "boolean",
            "description": "Whether this portfolio is archived"
          },
          "creative_count": {
            "type": "integer",
            "description": "Number of creatives in this portfolio"
          },
          "format_ids": {
            "type": "array",
            "description": "Formats represented in this portfolio",
            "items": {
              "$ref": "/schemas/core/format-id.json"
            }
          },
          "created_at": {
            "type": "string",
            "format": "date-time"
          },
          "updated_at": {
            "type": "string",
            "format": "date-time"
          }
        },
        "required": ["portfolio_id", "name"],
        "additionalProperties": true
      }
    },
    "total_count": {
      "type": "integer",
      "description": "Total number of portfolios matching the filter (for pagination)"
    },
    "errors": {
      "type": "array",
      "description": "Task-specific errors and warnings",
      "items": {
        "$ref": "/schemas/core/error.json"
      }
    },
    "context": {
      "$ref": "/schemas/core/context.json"
    },
    "ext": {
      "$ref": "/schemas/core/ext.json"
    }
  },
  "required": ["portfolios"],
  "additionalProperties": true
}
