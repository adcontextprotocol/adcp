{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "/schemas/portfolio/create-portfolio-response.json",
  "title": "Create Portfolio Response",
  "description": "Response payload for create_portfolio task",
  "type": "object",
  "properties": {
    "portfolio_id": {
      "type": "string",
      "description": "Unique identifier for the created portfolio"
    },
    "name": {
      "type": "string",
      "description": "Name of the portfolio"
    },
    "archived": {
      "type": "boolean",
      "description": "Whether this portfolio is archived",
      "default": false
    },
    "creatives": {
      "type": "array",
      "description": "Initial creatives (may be empty or in 'processing' status)",
      "items": {
        "$ref": "/schemas/core/portfolio-item.json"
      }
    },
    "created_at": {
      "type": "string",
      "format": "date-time",
      "description": "When this portfolio was created"
    },
    "errors": {
      "type": "array",
      "description": "Task-specific errors and warnings",
      "items": {
        "$ref": "/schemas/core/error.json"
      }
    },
    "context": {
      "$ref": "/schemas/core/context.json"
    },
    "ext": {
      "$ref": "/schemas/core/ext.json"
    }
  },
  "required": ["portfolio_id", "name"],
  "additionalProperties": true
}
