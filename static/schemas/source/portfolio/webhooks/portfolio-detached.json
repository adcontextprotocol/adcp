{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "/schemas/portfolio/webhooks/portfolio-detached.json",
  "title": "Portfolio Detached Webhook",
  "description": "Webhook payload sent by seller agent when a portfolio is detached from a media buy.",
  "type": "object",
  "properties": {
    "portfolio_id": {
      "type": "string",
      "description": "The portfolio being detached"
    },
    "media_buy_id": {
      "type": "string",
      "description": "The media buy this portfolio was detached from"
    },
    "seller_agent_url": {
      "type": "string",
      "format": "uri",
      "description": "URL of the seller agent making this notification"
    },
    "reason": {
      "type": "string",
      "enum": ["media_buy_ended", "media_buy_cancelled", "creative_replaced", "manual"],
      "description": "Why the portfolio was detached"
    },
    "detached_at": {
      "type": "string",
      "format": "date-time",
      "description": "When this detachment occurred"
    },
    "ext": {
      "$ref": "/schemas/core/ext.json"
    }
  },
  "required": ["portfolio_id", "media_buy_id", "seller_agent_url"],
  "additionalProperties": true
}
