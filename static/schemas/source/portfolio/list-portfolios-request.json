{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "/schemas/portfolio/list-portfolios-request.json",
  "title": "List Portfolios Request",
  "description": "Request parameters for querying portfolios with filtering and pagination",
  "type": "object",
  "properties": {
    "filter": {
      "type": "object",
      "description": "Filter criteria",
      "properties": {
        "archived": {
          "type": "boolean",
          "description": "Filter by archived status. Omit to include both."
        },
        "search": {
          "type": "string",
          "description": "Text search across name and description"
        },
        "brand_manifest_url": {
          "type": "string",
          "format": "uri",
          "description": "Filter by brand manifest URL"
        },
        "created_after": {
          "type": "string",
          "format": "date-time",
          "description": "Filter to sets created after this timestamp"
        },
        "created_before": {
          "type": "string",
          "format": "date-time",
          "description": "Filter to sets created before this timestamp"
        }
      },
      "additionalProperties": true
    },
    "sort": {
      "type": "object",
      "description": "Sort configuration",
      "properties": {
        "field": {
          "type": "string",
          "enum": ["created_at", "updated_at", "name"],
          "default": "updated_at"
        },
        "order": {
          "$ref": "/schemas/enums/sort-direction.json",
          "default": "desc"
        }
      },
      "additionalProperties": false
    },
    "pagination": {
      "type": "object",
      "description": "Pagination parameters",
      "properties": {
        "limit": {
          "type": "integer",
          "minimum": 1,
          "maximum": 100,
          "default": 20,
          "description": "Maximum results to return"
        },
        "offset": {
          "type": "integer",
          "minimum": 0,
          "default": 0,
          "description": "Number of results to skip"
        }
      },
      "additionalProperties": false
    },
    "context": {
      "$ref": "/schemas/core/context.json"
    },
    "ext": {
      "$ref": "/schemas/core/ext.json"
    }
  },
  "additionalProperties": true
}
