{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "/schemas/portfolio/update-portfolio-response.json",
  "title": "Update Portfolio Response",
  "description": "Response payload for update_portfolio task",
  "type": "object",
  "properties": {
    "portfolio_id": {
      "type": "string",
      "description": "Unique identifier for the portfolio"
    },
    "name": {
      "type": "string",
      "description": "Name of the portfolio"
    },
    "archived": {
      "type": "boolean",
      "description": "Whether this portfolio is archived",
      "default": false
    },
    "creatives": {
      "type": "array",
      "description": "Current creatives in the portfolio",
      "items": {
        "$ref": "/schemas/core/portfolio-item.json"
      }
    },
    "changes": {
      "type": "object",
      "description": "Summary of changes made",
      "properties": {
        "creatives_added": {
          "type": "array",
          "items": { "type": "string" }
        },
        "creatives_removed": {
          "type": "array",
          "items": { "type": "string" }
        },
        "creatives_regenerating": {
          "type": "array",
          "items": { "type": "string" }
        }
      },
      "additionalProperties": true
    },
    "updated_at": {
      "type": "string",
      "format": "date-time",
      "description": "When this update occurred"
    },
    "errors": {
      "type": "array",
      "description": "Task-specific errors and warnings",
      "items": {
        "$ref": "/schemas/core/error.json"
      }
    },
    "context": {
      "$ref": "/schemas/core/context.json"
    },
    "ext": {
      "$ref": "/schemas/core/ext.json"
    }
  },
  "required": ["portfolio_id"],
  "additionalProperties": true
}
