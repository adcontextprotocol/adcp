{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "/schemas/core/agent.json",
  "title": "Agent",
  "description": "The entity operating on an account - placing buys, uploading creatives, monitoring delivery. Identified by authentication token.",
  "type": "object",
  "properties": {
    "agent_id": {
      "type": "string",
      "description": "Unique identifier for this agent"
    },
    "organization": {
      "type": "string",
      "description": "Organization the agent belongs to"
    },
    "type": {
      "type": "string",
      "enum": ["internal", "agency", "dsp", "automated"],
      "description": "Type of agent"
    },
    "ext": {
      "$ref": "/schemas/core/ext.json"
    }
  },
  "required": ["agent_id", "organization"],
  "additionalProperties": false,
  "examples": [
    {
      "description": "Brand's internal team",
      "data": {
        "agent_id": "agent_coke_internal",
        "organization": "The Coca-Cola Company",
        "type": "internal"
      }
    },
    {
      "description": "Agency trading desk",
      "data": {
        "agent_id": "agent_publicis_trading",
        "organization": "Publicis Media",
        "type": "agency"
      }
    },
    {
      "description": "Automated buying system",
      "data": {
        "agent_id": "agent_dv360_auto",
        "organization": "Display & Video 360",
        "type": "dsp"
      }
    }
  ]
}
