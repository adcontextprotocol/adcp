{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "/schemas/core/signal-filters.json",
  "title": "Signal Filters",
  "description": "Filters to refine signal discovery results",
  "type": "object",
  "properties": {
    "catalog_types": {
      "type": "array",
      "description": "Filter by catalog type",
      "items": {
        "$ref": "/schemas/enums/signal-catalog-type.json"
      },
      "minItems": 1
    },
    "data_providers": {
      "type": "array",
      "description": "Filter by specific data providers",
      "items": {
        "type": "string"
      },
      "minItems": 1
    },
    "max_cpm": {
      "type": "number",
      "description": "Maximum CPM filter. Applies to signals with model='cpm', and to percent_of_media signals that have a max_cpm cap.",
      "minimum": 0
    },
    "max_percent": {
      "type": "number",
      "description": "Maximum percent-of-media filter. Applies only to signals with model='percent_of_media'.",
      "minimum": 0,
      "maximum": 100
    },
    "min_coverage_percentage": {
      "type": "number",
      "description": "Minimum coverage requirement",
      "minimum": 0,
      "maximum": 100
    }
  },
  "additionalProperties": true
}
