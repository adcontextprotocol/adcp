{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "/schemas/creative-set/update-creative-set-response.json",
  "title": "Update Creative Set Response",
  "description": "Response payload for update_creative_set task",
  "type": "object",
  "properties": {
    "creative_set_id": {
      "type": "string",
      "description": "Unique identifier for the creative set"
    },
    "name": {
      "type": "string",
      "description": "Name of the creative set"
    },
    "archived": {
      "type": "boolean",
      "description": "Whether this creative set is archived",
      "default": false
    },
    "creatives": {
      "type": "array",
      "description": "Current creatives in the set",
      "items": {
        "$ref": "/schemas/core/creative-set-item.json"
      }
    },
    "changes": {
      "type": "object",
      "description": "Summary of changes made",
      "properties": {
        "creatives_added": {
          "type": "array",
          "items": { "type": "string" }
        },
        "creatives_removed": {
          "type": "array",
          "items": { "type": "string" }
        },
        "creatives_regenerating": {
          "type": "array",
          "items": { "type": "string" }
        }
      },
      "additionalProperties": true
    },
    "updated_at": {
      "type": "string",
      "format": "date-time",
      "description": "When this update occurred"
    },
    "errors": {
      "type": "array",
      "description": "Task-specific errors and warnings",
      "items": {
        "$ref": "/schemas/core/error.json"
      }
    },
    "context": {
      "$ref": "/schemas/core/context.json"
    },
    "ext": {
      "$ref": "/schemas/core/ext.json"
    }
  },
  "required": ["creative_set_id"],
  "additionalProperties": true
}
