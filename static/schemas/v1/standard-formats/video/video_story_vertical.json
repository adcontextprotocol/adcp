{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "/schemas/v1/standard-formats/video/video_story_vertical.json",
  "title": "Video Story Vertical",
  "description": "Full-screen vertical video format for mobile story placements (Instagram/TikTok style)",
  "type": "object",
  "properties": {
    "format_id": {
      "type": "string",
      "const": "video_story_vertical"
    },
    "type": {
      "type": "string",
      "const": "video"
    },
    "category": {
      "type": "string",
      "const": "standard"
    },
    "name": {
      "type": "string",
      "default": "Vertical Story Video"
    },
    "platform": {
      "type": "string",
      "const": "mobile"
    },
    "placement_type": {
      "type": "string",
      "const": "story",
      "description": "Full-screen story format"
    },
    "is_standard": {
      "type": "boolean",
      "const": true
    },
    "is_3p_served": {
      "type": "boolean",
      "const": false
    },
    "aspect_ratio": {
      "type": "string",
      "const": "9:16"
    },
    "assets_required": {
      "type": "array",
      "minItems": 2,
      "items": [
        {
          "type": "object",
          "properties": {
            "asset_id": {
              "type": "string",
              "const": "video_file"
            },
            "asset_type": {
              "type": "string",
              "const": "video"
            },
            "required": {
              "type": "boolean",
              "const": true
            },
            "min_duration_seconds": {
              "type": "number",
              "const": 5
            },
            "max_duration_seconds": {
              "type": "number",
              "const": 15
            },
            "acceptable_formats": {
              "type": "array",
              "items": {
                "type": "string",
                "enum": ["mp4", "webm"]
              },
              "const": ["mp4", "webm"]
            },
            "acceptable_codecs": {
              "type": "array",
              "items": {
                "type": "string",
                "enum": ["h264", "h265"]
              },
              "const": ["h264", "h265"]
            },
            "aspect_ratio": {
              "type": "string",
              "const": "9:16"
            },
            "resolution": {
              "type": "string",
              "const": "1080x1920"
            },
            "max_file_size_mb": {
              "type": "number",
              "const": 30
            },
            "features": {
              "type": "array",
              "items": {
                "type": "string",
                "enum": ["sound on", "full-screen", "swipeable"]
              },
              "const": ["sound on", "full-screen", "swipeable"]
            }
          },
          "required": ["asset_id", "asset_type", "required", "min_duration_seconds", "max_duration_seconds", "acceptable_formats", "acceptable_codecs", "aspect_ratio", "resolution", "max_file_size_mb"],
          "additionalProperties": false
        },
        {
          "type": "object",
          "properties": {
            "asset_id": {
              "type": "string",
              "const": "clickthrough_url"
            },
            "asset_type": {
              "type": "string",
              "const": "url"
            },
            "required": {
              "type": "boolean",
              "const": true
            },
            "url_type": {
              "type": "string",
              "const": "clickthrough"
            },
            "must_be_https": {
              "type": "boolean",
              "const": true
            }
          },
          "required": ["asset_id", "asset_type", "required", "url_type", "must_be_https"],
          "additionalProperties": false
        }
      ]
    },
    "optional_assets": {
      "type": "array",
      "items": [
        {
          "type": "object",
          "properties": {
            "asset_id": {
              "type": "string",
              "const": "cta_sticker"
            },
            "asset_type": {
              "type": "string",
              "const": "overlay"
            },
            "required": {
              "type": "boolean",
              "const": false
            },
            "overlay_type": {
              "type": "string",
              "enum": ["swipe_up", "button", "sticker"]
            },
            "text": {
              "type": "string",
              "maxLength": 15
            }
          }
        },
        {
          "type": "object",
          "properties": {
            "asset_id": {
              "type": "string",
              "const": "captions_file"
            },
            "asset_type": {
              "type": "string",
              "const": "captions"
            },
            "required": {
              "type": "boolean",
              "const": false
            },
            "format": {
              "type": "string",
              "enum": ["vtt", "srt"]
            }
          }
        }
      ]
    },
    "interaction_features": {
      "type": "object",
      "properties": {
        "swipe_action": {
          "type": "string",
          "enum": ["next_story", "landing_page", "app_store"],
          "default": "landing_page"
        },
        "tap_zones": {
          "type": "boolean",
          "const": true,
          "description": "Tap left/right for navigation"
        },
        "auto_advance": {
          "type": "boolean",
          "const": true
        }
      }
    }
  },
  "required": ["format_id", "type", "category", "platform", "placement_type", "aspect_ratio", "is_3p_served", "assets_required"],
  "additionalProperties": false
}