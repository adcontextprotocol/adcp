{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "/schemas/v1/standard-formats/video/foundational_video_15s.json",
  "title": "Foundational Video 15s",
  "description": "Universal 15-second video format adaptable across publishers",
  "type": "object",
  "properties": {
    "format_id": {
      "$ref": "/schemas/v1/core/format-id.json"
    },
    "type": {
      "type": "string",
      "const": "video"
    },
    "name": {
      "type": "string",
      "default": "Universal 15-second Video"
    },
    "duration": {
      "type": "string",
      "const": "15s"
    },
    "publisher_coverage": {
      "type": "string",
      "const": "All publishers"
    },
    "delivery": {
      "type": "object",
      "properties": {
        "hosted": {
          "type": "boolean",
          "const": true
        },
        "vast": {
          "type": "object",
          "properties": {
            "versions": {
              "type": "array",
              "items": {
                "type": "string",
                "enum": ["2.0", "3.0", "4.0+"]
              },
              "const": ["2.0", "3.0", "4.0+"]
            }
          },
          "required": ["versions"]
        }
      },
      "required": ["hosted", "vast"]
    },
    "assets_required": {
      "type": "array",
      "minItems": 1,
      "maxItems": 1,
      "items": [
        {
          "type": "object",
          "properties": {
            "asset_type": {
              "type": "string",
              "const": "video_file"
            },
            "required": {
              "type": "boolean", 
              "const": true
            },
            "requirements": {
              "type": "object",
              "properties": {
                "duration": {
                  "type": "string",
                  "const": "15s"
                },
                "format": {
                  "type": "string",
                  "const": "MP4 H.264"
                },
                "aspect_ratios": {
                  "type": "array",
                  "items": {
                    "type": "string",
                    "enum": ["16:9", "9:16", "1:1"]
                  },
                  "const": ["16:9", "9:16", "1:1"]
                },
                "resolution": {
                  "type": "object",
                  "properties": {
                    "16:9": {
                      "type": "array",
                      "items": {
                        "type": "string",
                        "enum": ["1920x1080", "1280x720"]
                      },
                      "const": ["1920x1080", "1280x720"]
                    },
                    "9:16": {
                      "type": "string",
                      "const": "1080x1920"
                    },
                    "1:1": {
                      "type": "string", 
                      "const": "1080x1080"
                    }
                  },
                  "required": ["16:9", "9:16", "1:1"]
                }
              },
              "required": ["duration", "format", "aspect_ratios", "resolution"]
            }
          },
          "required": ["asset_type", "required", "requirements"],
          "additionalProperties": false
        }
      ]
    },
    "extension_points": {
      "type": "object",
      "properties": {
        "additional_assets": {
          "type": "string",
          "const": "Publishers may require additional brand safety or measurement assets"
        },
        "placement_variants": {
          "type": "string",
          "const": "Format adapts to different video placement contexts (pre-roll, mid-roll, etc.)"
        },
        "quality_requirements": {
          "type": "string", 
          "const": "Publishers may specify minimum bitrate or quality standards"
        }
      },
      "additionalProperties": false
    }
  },
  "required": ["format_id", "type", "duration", "publisher_coverage", "delivery", "assets_required"],
  "additionalProperties": false
}