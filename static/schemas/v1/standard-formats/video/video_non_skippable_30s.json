{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "/schemas/v1/standard-formats/video/video_non_skippable_30s.json",
  "title": "Video Non-Skippable 30s",
  "description": "30-second non-skippable video ad (must watch complete)",
  "type": "object",
  "properties": {
    "format_id": {
      "type": "string",
      "const": "video_non_skippable_30s"
    },
    "type": {
      "type": "string",
      "const": "video"
    },
    "name": {
      "type": "string",
      "default": "30-second Non-Skippable Video"
    },
    "duration_seconds": {
      "type": "integer",
      "const": 30
    },
    "skippable": {
      "type": "boolean",
      "const": false,
      "description": "User cannot skip this ad"
    },
    "placement_contexts": {
      "type": "array",
      "items": {
        "type": "string",
        "enum": ["pre_roll", "mid_roll", "ctv", "rewarded"]
      },
      "default": ["mid_roll", "ctv"]
    },
    "assets_required": {
      "type": "array",
      "minItems": 2,
      "items": [
        {
          "type": "object",
          "properties": {
            "asset_id": {
              "type": "string",
              "const": "video_file"
            },
            "asset_type": {
              "type": "string",
              "const": "video"
            },
            "required": {
              "type": "boolean",
              "const": true
            },
            "duration_seconds": {
              "type": "number",
              "const": 30
            },
            "acceptable_formats": {
              "type": "array",
              "items": {
                "type": "string",
                "enum": ["mp4", "webm"]
              },
              "const": ["mp4", "webm"]
            },
            "acceptable_codecs": {
              "type": "array",
              "items": {
                "type": "string",
                "enum": ["h264", "h265", "vp8", "vp9"]
              },
              "default": ["h264", "vp9"]
            },
            "aspect_ratios": {
              "type": "array",
              "items": {
                "type": "string",
                "enum": ["16:9", "9:16", "1:1", "4:3"]
              },
              "default": ["16:9"]
            },
            "min_resolution": {
              "type": "string",
              "const": "1080p"
            },
            "max_file_size_mb": {
              "type": "number",
              "const": 50
            }
          },
          "required": ["asset_id", "asset_type", "required", "duration_seconds", "acceptable_formats", "min_resolution", "max_file_size_mb"],
          "additionalProperties": false
        },
        {
          "type": "object",
          "properties": {
            "asset_id": {
              "type": "string",
              "const": "clickthrough_url"
            },
            "asset_type": {
              "type": "string",
              "const": "url"
            },
            "required": {
              "type": "boolean",
              "const": true
            },
            "url_type": {
              "type": "string",
              "const": "clickthrough"
            },
            "must_be_https": {
              "type": "boolean",
              "const": true
            }
          },
          "required": ["asset_id", "asset_type", "required", "url_type", "must_be_https"],
          "additionalProperties": false
        }
      ]
    },
    "optional_assets": {
      "type": "array",
      "items": 
        {
          "type": "object",
          "properties": {
            "asset_id": {
              "type": "string",
              "const": "end_card"
            },
            "asset_type": {
              "type": "string",
              "const": "image"
            },
            "required": {
              "type": "boolean",
              "const": false
            },
            "description": {
              "type": "string",
              "const": "Static end card shown after video"
            }
          }
        }
    },
    "completion_requirements": {
      "type": "object",
      "properties": {
        "min_view_percentage": {
          "type": "integer",
          "const": 100,
          "description": "Percentage of video that must be viewed"
        },
        "quartile_tracking": {
          "type": "boolean",
          "const": true,
          "description": "Track 25%, 50%, 75%, 100% completion"
        }
      }
    }
  },
  "required": ["format_id", "type", "duration_seconds", "skippable", "assets_required"],
  "additionalProperties": false
}