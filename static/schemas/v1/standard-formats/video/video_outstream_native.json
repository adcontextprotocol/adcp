{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "/schemas/v1/standard-formats/video/video_outstream_native.json",
  "title": "Video Outstream Native",
  "description": "In-feed native video format that plays within content streams",
  "type": "object",
  "properties": {
    "format_id": {
      "type": "string",
      "const": "video_outstream_native"
    },
    "type": {
      "type": "string",
      "const": "video"
    },
    "name": {
      "type": "string",
      "default": "Outstream Native Video"
    },
    "placement_type": {
      "type": "string",
      "const": "in-feed"
    },
    "is_standard": {
      "type": "boolean",
      "const": true
    },
    "iab_specification": {
      "type": "string",
      "const": "Outstream Video"
    },
    "playback_method": {
      "type": "object",
      "properties": {
        "autoplay": {
          "type": "boolean",
          "const": true
        },
        "muted": {
          "type": "boolean",
          "const": true,
          "description": "Must start muted for autoplay"
        },
        "viewability_trigger": {
          "type": "string",
          "const": "50% in view",
          "description": "Video starts when 50% is viewable"
        },
        "pause_on_scroll": {
          "type": "boolean",
          "const": true
        }
      }
    },
    "assets_required": {
      "type": "array",
      "minItems": 3,
      "items": [
        {
          "type": "object",
          "properties": {
            "asset_id": {
              "type": "string",
              "const": "video_file"
            },
            "asset_type": {
              "type": "string",
              "const": "video"
            },
            "required": {
              "type": "boolean",
              "const": true
            },
            "min_duration_seconds": {
              "type": "number",
              "const": 6
            },
            "max_duration_seconds": {
              "type": "number",
              "const": 30
            },
            "acceptable_formats": {
              "type": "array",
              "items": {
                "type": "string",
                "enum": ["mp4", "webm"]
              },
              "const": ["mp4", "webm"]
            },
            "acceptable_codecs": {
              "type": "array",
              "items": {
                "type": "string",
                "enum": ["h264", "vp8", "vp9"]
              },
              "const": ["h264", "vp8", "vp9"]
            },
            "aspect_ratios": {
              "type": "array",
              "items": {
                "type": "string",
                "enum": ["16:9", "1:1", "4:3"]
              },
              "const": ["16:9", "1:1", "4:3"]
            },
            "max_file_size_mb": {
              "type": "number",
              "const": 25
            }
          },
          "required": ["asset_id", "asset_type", "required", "min_duration_seconds", "max_duration_seconds", "acceptable_formats", "acceptable_codecs", "aspect_ratios", "max_file_size_mb"],
          "additionalProperties": false
        },
        {
          "type": "object",
          "properties": {
            "asset_id": {
              "type": "string",
              "const": "thumbnail_image"
            },
            "asset_type": {
              "type": "string",
              "const": "image"
            },
            "required": {
              "type": "boolean",
              "const": true
            },
            "width": {
              "type": "integer",
              "const": 1200
            },
            "height": {
              "type": "integer",
              "const": 627
            },
            "acceptable_formats": {
              "type": "array",
              "items": {
                "type": "string",
                "enum": ["jpg", "png", "webp"]
              },
              "const": ["jpg", "png", "webp"]
            },
            "max_file_size_kb": {
              "type": "number",
              "const": 150
            }
          },
          "required": ["asset_id", "asset_type", "required", "width", "height", "acceptable_formats", "max_file_size_kb"],
          "additionalProperties": false
        },
        {
          "type": "object",
          "properties": {
            "asset_id": {
              "type": "string",
              "const": "clickthrough_url"
            },
            "asset_type": {
              "type": "string",
              "const": "url"
            },
            "required": {
              "type": "boolean",
              "const": true
            },
            "url_type": {
              "type": "string",
              "const": "clickthrough"
            },
            "must_be_https": {
              "type": "boolean",
              "const": true
            }
          },
          "required": ["asset_id", "asset_type", "required", "url_type", "must_be_https"],
          "additionalProperties": false
        }
      ]
    },
    "optional_assets": {
      "type": "array",
      "items": [
        {
          "type": "object",
          "properties": {
            "asset_id": {
              "type": "string",
              "const": "captions_file"
            },
            "asset_type": {
              "type": "string",
              "const": "captions"
            },
            "required": {
              "type": "boolean",
              "const": false
            },
            "format": {
              "type": "string",
              "enum": ["vtt", "srt"]
            }
          }
        }
      ]
    },
    "technical_requirements": {
      "type": "object",
      "properties": {
        "vpaid_support": {
          "type": "boolean",
          "const": false
        },
        "moat_viewability": {
          "type": "boolean",
          "const": true
        },
        "om_sdk_support": {
          "type": "boolean",
          "const": true
        }
      }
    }
  },
  "required": ["format_id", "type", "placement_type", "playback_method", "assets_required"],
  "additionalProperties": false
}