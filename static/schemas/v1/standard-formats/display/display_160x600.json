{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "/schemas/v1/standard-formats/display/display_160x600.json",
  "title": "Display 160x600 (Wide Skyscraper)",
  "description": "Wide skyscraper banner format for desktop sidebar placements",
  "type": "object",
  "properties": {
    "format_id": {
      "type": "string",
      "const": "display_160x600"
    },
    "type": {
      "type": "string",
      "const": "display"
    },
    "name": {
      "type": "string",
      "default": "Wide Skyscraper"
    },
    "dimensions": {
      "type": "string",
      "const": "160x600"
    },
    "is_standard": {
      "type": "boolean",
      "const": true
    },
    "iab_specification": {
      "type": "string",
      "const": "Wide Skyscraper"
    },
    "viewability_optimized": {
      "type": "boolean",
      "const": true,
      "description": "High viewability format due to vertical sidebar placement"
    },
    "assets_required": {
      "type": "array",
      "minItems": 2,
      "maxItems": 2,
      "items": [
        {
          "type": "object",
          "properties": {
            "asset_id": {
              "type": "string",
              "const": "banner_image"
            },
            "asset_type": {
              "type": "string",
              "const": "image"
            },
            "required": {
              "type": "boolean",
              "const": true
            },
            "width": {
              "type": "integer",
              "const": 160
            },
            "height": {
              "type": "integer",
              "const": 600
            },
            "acceptable_formats": {
              "type": "array",
              "items": {
                "type": "string",
                "enum": ["jpg", "png", "gif", "webp"]
              },
              "const": ["jpg", "png", "gif", "webp"]
            },
            "max_file_size_kb": {
              "type": "number",
              "const": 250
            }
          },
          "required": ["asset_id", "asset_type", "required", "width", "height", "acceptable_formats", "max_file_size_kb"],
          "additionalProperties": false
        },
        {
          "type": "object",
          "properties": {
            "asset_id": {
              "type": "string",
              "const": "clickthrough_url"
            },
            "asset_type": {
              "type": "string",
              "const": "url"
            },
            "required": {
              "type": "boolean",
              "const": true
            },
            "url_type": {
              "type": "string",
              "const": "clickthrough"
            },
            "must_be_https": {
              "type": "boolean",
              "const": true
            }
          },
          "required": ["asset_id", "asset_type", "required", "url_type", "must_be_https"],
          "additionalProperties": false
        }
      ]
    }
  },
  "required": ["format_id", "type", "dimensions", "assets_required"],
  "additionalProperties": false
}