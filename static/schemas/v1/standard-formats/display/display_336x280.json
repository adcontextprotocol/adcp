{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "/schemas/v1/standard-formats/display/display_336x280.json",
  "title": "Display 336x280 (Large Rectangle)",
  "description": "Large rectangle banner format for desktop placements",
  "type": "object",
  "properties": {
    "format_id": {
      "type": "string",
      "const": "display_336x280"
    },
    "type": {
      "type": "string",
      "const": "display"
    },
    "name": {
      "type": "string",
      "default": "Large Rectangle"
    },
    "is_standard": {
      "type": "boolean",
      "const": true
    },
    "iab_specification": {
      "type": "string",
      "const": "Large Rectangle"
    },
    "assets_required": {
      "type": "array",
      "minItems": 2,
      "maxItems": 2,
      "items": [
        {
          "type": "object",
          "properties": {
            "asset_id": {
              "type": "string",
              "const": "banner_image"
            },
            "asset_type": {
              "type": "string",
              "const": "image"
            },
            "required": {
              "type": "boolean",
              "const": true
            },
            "width": {
              "type": "integer",
              "const": 336
            },
            "height": {
              "type": "integer",
              "const": 280
            },
            "acceptable_formats": {
              "type": "array",
              "items": {
                "type": "string",
                "enum": [
                  "jpg",
                  "png",
                  "gif",
                  "webp"
                ]
              },
              "const": [
                "jpg",
                "png",
                "gif",
                "webp"
              ]
            },
            "max_file_size_kb": {
              "type": "number",
              "const": 250
            }
          },
          "required": [
            "asset_id",
            "asset_type",
            "required",
            "width",
            "height",
            "acceptable_formats",
            "max_file_size_kb"
          ],
          "additionalProperties": false
        },
        {
          "type": "object",
          "properties": {
            "asset_id": {
              "type": "string",
              "const": "clickthrough_url"
            },
            "asset_type": {
              "type": "string",
              "const": "url"
            },
            "required": {
              "type": "boolean",
              "const": true
            },
            "url_type": {
              "type": "string",
              "const": "clickthrough"
            },
            "must_be_https": {
              "type": "boolean",
              "const": true
            }
          },
          "required": [
            "asset_id",
            "asset_type",
            "required",
            "url_type",
            "must_be_https"
          ],
          "additionalProperties": false
        }
      ]
    },
    "renders": {
      "type": "array",
      "minItems": 1,
      "maxItems": 1,
      "items": {
        "type": "object",
        "properties": {
          "role": {
            "type": "string",
            "const": "primary"
          },
          "dimensions": {
            "type": "object",
            "properties": {
              "width": {
                "type": "number",
                "const": 336
              },
              "height": {
                "type": "number",
                "const": 280
              },
              "responsive": {
                "type": "object",
                "properties": {
                  "width": {
                    "type": "boolean",
                    "const": false
                  },
                  "height": {
                    "type": "boolean",
                    "const": false
                  }
                },
                "required": [
                  "width",
                  "height"
                ]
              },
              "unit": {
                "type": "string",
                "const": "px"
              }
            },
            "required": [
              "width",
              "height",
              "responsive",
              "unit"
            ]
          }
        },
        "required": [
          "role",
          "dimensions"
        ]
      }
    }
  },
  "required": [
    "format_id",
    "type",
    "renders",
    "assets_required"
  ],
  "additionalProperties": false
}
