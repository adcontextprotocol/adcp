{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "/schemas/v1/standard-formats/display/display_728x90.json",
  "title": "Display 728x90 (Leaderboard)",
  "description": "Standard leaderboard banner format",
  "type": "object",
  "properties": {
    "format_id": {
      "type": "string",
      "const": "display_728x90"
    },
    "type": {
      "type": "string",
      "const": "display"
    },
    "name": {
      "type": "string",
      "default": "Leaderboard Banner"
    },
    "assets_required": {
      "type": "array",
      "minItems": 2,
      "maxItems": 2,
      "items": [
        {
          "type": "object",
          "properties": {
            "asset_id": {
              "type": "string",
              "const": "banner_image"
            },
            "asset_type": {
              "type": "string",
              "const": "image"
            },
            "required": {
              "type": "boolean",
              "const": true
            },
            "width": {
              "type": "integer",
              "const": 728
            },
            "height": {
              "type": "integer",
              "const": 90
            },
            "acceptable_formats": {
              "type": "array",
              "items": {
                "type": "string",
                "enum": [
                  "jpg",
                  "png",
                  "gif"
                ]
              },
              "const": [
                "jpg",
                "png",
                "gif"
              ]
            },
            "max_file_size_kb": {
              "type": "number",
              "const": 200
            }
          },
          "required": [
            "asset_id",
            "asset_type",
            "required",
            "width",
            "height",
            "acceptable_formats",
            "max_file_size_kb"
          ],
          "additionalProperties": false
        },
        {
          "type": "object",
          "properties": {
            "asset_id": {
              "type": "string",
              "const": "clickthrough_url"
            },
            "asset_type": {
              "type": "string",
              "const": "url"
            },
            "required": {
              "type": "boolean",
              "const": true
            },
            "url_type": {
              "type": "string",
              "const": "clickthrough"
            },
            "must_be_https": {
              "type": "boolean",
              "const": true
            }
          },
          "required": [
            "asset_id",
            "asset_type",
            "required",
            "url_type",
            "must_be_https"
          ],
          "additionalProperties": false
        }
      ]
    },
    "renders": {
      "type": "array",
      "minItems": 1,
      "maxItems": 1,
      "items": {
        "type": "object",
        "properties": {
          "role": {
            "type": "string",
            "const": "primary"
          },
          "dimensions": {
            "type": "object",
            "properties": {
              "width": {
                "type": "number",
                "const": 728
              },
              "height": {
                "type": "number",
                "const": 90
              },
              "responsive": {
                "type": "object",
                "properties": {
                  "width": {
                    "type": "boolean",
                    "const": false
                  },
                  "height": {
                    "type": "boolean",
                    "const": false
                  }
                },
                "required": [
                  "width",
                  "height"
                ]
              },
              "unit": {
                "type": "string",
                "const": "px"
              }
            },
            "required": [
              "width",
              "height",
              "responsive",
              "unit"
            ]
          }
        },
        "required": [
          "role",
          "dimensions"
        ]
      }
    }
  },
  "required": [
    "format_id",
    "type",
    "renders",
    "assets_required"
  ],
  "additionalProperties": false
}
