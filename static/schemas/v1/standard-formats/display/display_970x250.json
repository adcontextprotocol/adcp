{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "/schemas/v1/standard-formats/display/display_970x250.json",
  "title": "Display 970x250 (Billboard)",
  "description": "Premium billboard banner format for high-impact desktop placements",
  "type": "object",
  "properties": {
    "format_id": {
      "type": "string",
      "const": "display_970x250"
    },
    "type": {
      "type": "string",
      "const": "display"
    },
    "category": {
      "type": "string",
      "const": "standard"
    },
    "name": {
      "type": "string",
      "default": "Billboard"
    },
    "dimensions": {
      "type": "string",
      "const": "970x250"
    },
    "platform": {
      "type": "string",
      "const": "desktop"
    },
    "placement_type": {
      "type": "string",
      "const": "premium",
      "description": "High-impact above-the-fold placement"
    },
    "is_standard": {
      "type": "boolean",
      "const": true
    },
    "iab_specification": {
      "type": "string",
      "const": "Billboard"
    },
    "is_3p_served": {
      "type": "boolean",
      "const": false
    },
    "assets_required": {
      "type": "array",
      "minItems": 2,
      "maxItems": 2,
      "items": [
        {
          "type": "object",
          "properties": {
            "asset_id": {
              "type": "string",
              "const": "banner_image"
            },
            "asset_type": {
              "type": "string",
              "const": "image"
            },
            "required": {
              "type": "boolean",
              "const": true
            },
            "width": {
              "type": "integer",
              "const": 970
            },
            "height": {
              "type": "integer",
              "const": 250
            },
            "acceptable_formats": {
              "type": "array",
              "items": {
                "type": "string",
                "enum": ["jpg", "png", "gif", "webp"]
              },
              "const": ["jpg", "png", "gif", "webp"]
            },
            "max_file_size_kb": {
              "type": "number",
              "const": 400
            },
            "animation_allowed": {
              "type": "boolean",
              "const": true
            }
          },
          "required": ["asset_id", "asset_type", "required", "width", "height", "acceptable_formats", "max_file_size_kb"],
          "additionalProperties": false
        },
        {
          "type": "object",
          "properties": {
            "asset_id": {
              "type": "string",
              "const": "clickthrough_url"
            },
            "asset_type": {
              "type": "string",
              "const": "url"
            },
            "required": {
              "type": "boolean",
              "const": true
            },
            "url_type": {
              "type": "string",
              "const": "clickthrough"
            },
            "must_be_https": {
              "type": "boolean",
              "const": true
            }
          },
          "required": ["asset_id", "asset_type", "required", "url_type", "must_be_https"],
          "additionalProperties": false
        }
      ]
    }
  },
  "required": ["format_id", "type", "category", "dimensions", "platform", "is_3p_served", "assets_required"],
  "additionalProperties": false
}