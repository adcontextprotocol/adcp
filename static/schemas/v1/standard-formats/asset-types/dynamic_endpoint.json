{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "/schemas/v1/standard-formats/asset-types/dynamic_endpoint.json",
  "title": "Dynamic Endpoint Asset Type Schema",
  "description": "Schema for dynamic creative endpoints that return content at render time (DCO)",
  "type": "object",
  "properties": {
    "asset_id": {
      "type": "string",
      "pattern": "^[a-z0-9_]+$",
      "description": "Unique identifier for this asset within the format"
    },
    "asset_type": {
      "type": "string",
      "const": "dynamic_endpoint"
    },
    "required": {
      "type": "boolean",
      "description": "Whether this asset is mandatory for the format"
    },
    "endpoint_url": {
      "type": "string",
      "format": "uri",
      "description": "URL endpoint that returns creative content at render time"
    },
    "method": {
      "type": "string",
      "enum": ["GET", "POST"],
      "default": "POST",
      "description": "HTTP method for endpoint request"
    },
    "timeout_ms": {
      "type": "integer",
      "minimum": 50,
      "maximum": 1000,
      "default": 200,
      "description": "Maximum time to wait for endpoint response"
    },
    "request_payload": {
      "type": "object",
      "properties": {
        "includes_context": {
          "type": "array",
          "items": {
            "type": "string",
            "enum": ["user_id", "placement_id", "geo", "device", "time", "weather", "audience_segments", "page_context"]
          },
          "description": "Context data to include in request"
        },
        "custom_params": {
          "type": "object",
          "additionalProperties": true,
          "description": "Custom parameters to send with request"
        }
      }
    },
    "response_format": {
      "type": "string",
      "enum": ["html", "json", "xml", "javascript"],
      "description": "Expected format of endpoint response"
    },
    "response_schema": {
      "type": "object",
      "description": "JSON Schema for validating response structure",
      "additionalProperties": true
    },
    "cache_config": {
      "type": "object",
      "properties": {
        "cache_enabled": {
          "type": "boolean",
          "default": false
        },
        "ttl_seconds": {
          "type": "integer",
          "minimum": 0,
          "maximum": 3600,
          "default": 0
        },
        "cache_key": {
          "type": "array",
          "items": {
            "type": "string"
          },
          "description": "Fields to use for cache key generation"
        }
      }
    },
    "fallback_asset": {
      "type": "object",
      "description": "Static fallback asset if endpoint fails",
      "properties": {
        "url": {
          "type": "string",
          "format": "uri"
        },
        "type": {
          "type": "string",
          "enum": ["image", "html", "video"]
        }
      }
    },
    "security": {
      "type": "object",
      "properties": {
        "requires_https": {
          "type": "boolean",
          "default": true
        },
        "authentication": {
          "type": "string",
          "enum": ["none", "api_key", "oauth2", "custom"],
          "default": "none"
        },
        "cors_enabled": {
          "type": "boolean",
          "default": true
        }
      }
    }
  },
  "required": ["asset_id", "asset_type", "required", "endpoint_url", "response_format"],
  "additionalProperties": false
}