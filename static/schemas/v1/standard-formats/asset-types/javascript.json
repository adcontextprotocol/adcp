{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "/schemas/v1/standard-formats/asset-types/javascript.json",
  "title": "JavaScript Asset Type Schema",
  "description": "Schema for JavaScript-based dynamic creative assets",
  "type": "object",
  "properties": {
    "asset_id": {
      "type": "string",
      "pattern": "^[a-z0-9_]+$",
      "description": "Unique identifier for this asset within the format"
    },
    "asset_type": {
      "type": "string",
      "const": "javascript"
    },
    "required": {
      "type": "boolean",
      "description": "Whether this asset is mandatory for the format"
    },
    "script_url": {
      "type": "string",
      "format": "uri",
      "description": "URL to JavaScript file that renders the creative"
    },
    "inline_code": {
      "type": "string",
      "description": "Inline JavaScript code (alternative to script_url)"
    },
    "render_method": {
      "type": "string",
      "enum": ["client_side", "server_side", "hybrid"],
      "default": "client_side",
      "description": "Where the JavaScript executes"
    },
    "container_id": {
      "type": "string",
      "description": "DOM element ID where creative renders"
    },
    "initialization": {
      "type": "object",
      "properties": {
        "function_name": {
          "type": "string",
          "description": "Entry point function to call"
        },
        "parameters": {
          "type": "object",
          "additionalProperties": true,
          "description": "Parameters to pass to initialization function"
        },
        "timing": {
          "type": "string",
          "enum": ["immediate", "dom_ready", "on_visible", "user_interaction"],
          "default": "dom_ready"
        }
      }
    },
    "dependencies": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "name": {
            "type": "string",
            "description": "Library name"
          },
          "url": {
            "type": "string",
            "format": "uri",
            "description": "CDN URL for the dependency"
          },
          "version": {
            "type": "string",
            "description": "Version requirement"
          }
        }
      },
      "description": "External JavaScript libraries required"
    },
    "sandbox_config": {
      "type": "object",
      "properties": {
        "use_iframe": {
          "type": "boolean",
          "default": true,
          "description": "Run in sandboxed iframe"
        },
        "allowed_domains": {
          "type": "array",
          "items": {
            "type": "string"
          },
          "description": "Allowed domains for network requests"
        },
        "permissions": {
          "type": "array",
          "items": {
            "type": "string",
            "enum": ["geolocation", "camera", "microphone", "storage", "none"]
          },
          "default": ["none"]
        }
      }
    },
    "performance": {
      "type": "object",
      "properties": {
        "max_execution_time_ms": {
          "type": "integer",
          "minimum": 100,
          "maximum": 5000,
          "default": 1000
        },
        "max_memory_mb": {
          "type": "integer",
          "minimum": 1,
          "maximum": 50,
          "default": 10
        },
        "lazy_load": {
          "type": "boolean",
          "default": false
        }
      }
    },
    "fallback_asset": {
      "type": "object",
      "description": "Static fallback if JavaScript fails",
      "properties": {
        "url": {
          "type": "string",
          "format": "uri"
        },
        "type": {
          "type": "string",
          "enum": ["image", "html"]
        }
      }
    }
  },
  "required": ["asset_id", "asset_type", "required"],
  "oneOf": [
    {"required": ["script_url"]},
    {"required": ["inline_code"]}
  ],
  "additionalProperties": false
}