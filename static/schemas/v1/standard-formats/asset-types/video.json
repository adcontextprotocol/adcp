{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "/schemas/v1/standard-formats/asset-types/video.json",
  "title": "Video Asset Type Schema",
  "description": "Schema for video file assets in AdCP creative formats",
  "type": "object",
  "properties": {
    "asset_id": {
      "type": "string",
      "pattern": "^[a-z0-9_]+$",
      "description": "Unique identifier for this asset within the format"
    },
    "asset_type": {
      "type": "string",
      "const": "video"
    },
    "required": {
      "type": "boolean",
      "description": "Whether this asset is mandatory for the format"
    },
    "duration_seconds": {
      "type": "number",
      "minimum": 0.1,
      "maximum": 300,
      "description": "Expected duration in seconds"
    },
    "min_duration_seconds": {
      "type": "number",
      "minimum": 0.1,
      "description": "Minimum allowed duration in seconds"
    },
    "max_duration_seconds": {
      "type": "number",
      "maximum": 300,
      "description": "Maximum allowed duration in seconds"
    },
    "acceptable_formats": {
      "type": "array",
      "items": {
        "type": "string",
        "enum": ["mp4", "webm", "mov"]
      },
      "minItems": 1,
      "uniqueItems": true,
      "description": "List of acceptable video container formats"
    },
    "acceptable_codecs": {
      "type": "array", 
      "items": {
        "type": "string",
        "enum": ["h264", "h265", "vp8", "vp9", "av1"]
      },
      "minItems": 1,
      "uniqueItems": true,
      "description": "List of acceptable video codecs"
    },
    "acceptable_resolutions": {
      "type": "array",
      "items": {
        "type": "string",
        "pattern": "^\\d+x\\d+$"
      },
      "minItems": 1,
      "uniqueItems": true,
      "description": "List of acceptable resolutions (e.g., '1920x1080', '1280x720')"
    },
    "aspect_ratio": {
      "type": "string",
      "pattern": "^\\d+:\\d+$",
      "description": "Required aspect ratio (e.g., '16:9', '9:16', '1:1')"
    },
    "max_file_size_mb": {
      "type": "number",
      "minimum": 0.1,
      "maximum": 500,
      "description": "Maximum file size in megabytes"
    },
    "min_bitrate_mbps": {
      "type": "number",
      "minimum": 0.1,
      "description": "Minimum bitrate in megabits per second"
    },
    "max_bitrate_mbps": {
      "type": "number",
      "minimum": 0.1,
      "maximum": 100,
      "description": "Maximum bitrate in megabits per second"
    },
    "features": {
      "type": "array",
      "items": {
        "type": "string",
        "enum": ["non-skippable", "sound on", "sound off", "auto-play", "click-to-play", "looping", "captions"]
      },
      "uniqueItems": true,
      "description": "Additional video features and restrictions"
    }
  },
  "required": ["asset_id", "asset_type", "required"],
  "additionalProperties": false
}