{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "/schemas/v1/standard-formats/native/native_responsive.json",
  "title": "Native Responsive",
  "description": "Flexible native ad format that adapts to content context (OpenRTB Native 1.2 compliant)",
  "type": "object",
  "properties": {
    "format_id": {
      "type": "string",
      "const": "native_responsive"
    },
    "type": {
      "type": "string",
      "const": "native"
    },
    "category": {
      "type": "string",
      "const": "standard"
    },
    "name": {
      "type": "string",
      "default": "Responsive Native Ad"
    },
    "is_standard": {
      "type": "boolean",
      "const": true
    },
    "iab_specification": {
      "type": "string",
      "const": "OpenRTB Native 1.2"
    },
    "is_3p_served": {
      "type": "boolean",
      "const": false
    },
    "openrtb_compliance": {
      "type": "object",
      "properties": {
        "version": {
          "type": "string",
          "const": "1.2"
        },
        "layout": {
          "type": "integer",
          "enum": [1, 2, 3, 4, 5, 6],
          "description": "1=Content Wall, 2=App Wall, 3=News Feed, 4=Chat List, 5=Carousel, 6=Content Stream"
        },
        "adunit": {
          "type": "integer",
          "enum": [1, 2, 3, 4, 5, 6],
          "description": "1=Paid Search, 2=Recommendation Widget, 3=Promoted Listing, 4=In-Ad, 5=Custom, 6=In-Feed"
        }
      }
    },
    "assets_required": {
      "type": "array",
      "minItems": 4,
      "items": [
        {
          "type": "object",
          "properties": {
            "asset_id": {
              "type": "string",
              "const": "title"
            },
            "asset_type": {
              "type": "string",
              "const": "text"
            },
            "required": {
              "type": "boolean",
              "const": true
            },
            "text_type": {
              "type": "string",
              "const": "headline"
            },
            "max_length": {
              "type": "integer",
              "const": 90
            },
            "min_length": {
              "type": "integer",
              "const": 10
            }
          },
          "required": ["asset_id", "asset_type", "required", "text_type", "max_length"],
          "additionalProperties": false
        },
        {
          "type": "object",
          "properties": {
            "asset_id": {
              "type": "string",
              "const": "description"
            },
            "asset_type": {
              "type": "string",
              "const": "text"
            },
            "required": {
              "type": "boolean",
              "const": true
            },
            "text_type": {
              "type": "string",
              "const": "description"
            },
            "max_length": {
              "type": "integer",
              "const": 140
            },
            "min_length": {
              "type": "integer",
              "const": 20
            }
          },
          "required": ["asset_id", "asset_type", "required", "text_type", "max_length"],
          "additionalProperties": false
        },
        {
          "type": "object",
          "properties": {
            "asset_id": {
              "type": "string",
              "const": "main_image"
            },
            "asset_type": {
              "type": "string",
              "const": "image"
            },
            "required": {
              "type": "boolean",
              "const": true
            },
            "acceptable_dimensions": {
              "type": "array",
              "items": {
                "type": "object",
                "properties": {
                  "width": {"type": "integer"},
                  "height": {"type": "integer"}
                }
              },
              "default": [
                {"width": 1200, "height": 627},
                {"width": 1200, "height": 1200},
                {"width": 600, "height": 500}
              ]
            },
            "min_width": {
              "type": "integer",
              "const": 600
            },
            "aspect_ratios": {
              "type": "array",
              "items": {
                "type": "string",
                "enum": ["1.91:1", "1:1", "4:3"]
              },
              "const": ["1.91:1", "1:1", "4:3"]
            },
            "acceptable_formats": {
              "type": "array",
              "items": {
                "type": "string",
                "enum": ["jpg", "png", "webp"]
              },
              "const": ["jpg", "png", "webp"]
            },
            "max_file_size_kb": {
              "type": "number",
              "const": 500
            }
          },
          "required": ["asset_id", "asset_type", "required", "min_width", "acceptable_formats", "max_file_size_kb"],
          "additionalProperties": false
        },
        {
          "type": "object",
          "properties": {
            "asset_id": {
              "type": "string",
              "const": "clickthrough_url"
            },
            "asset_type": {
              "type": "string",
              "const": "url"
            },
            "required": {
              "type": "boolean",
              "const": true
            },
            "url_type": {
              "type": "string",
              "const": "clickthrough"
            },
            "must_be_https": {
              "type": "boolean",
              "const": true
            }
          },
          "required": ["asset_id", "asset_type", "required", "url_type", "must_be_https"],
          "additionalProperties": false
        }
      ]
    },
    "optional_assets": {
      "type": "array",
      "items": [
        {
          "type": "object",
          "properties": {
            "asset_id": {
              "type": "string",
              "const": "icon_image"
            },
            "asset_type": {
              "type": "string",
              "const": "image"
            },
            "required": {
              "type": "boolean",
              "const": false
            },
            "width": {
              "type": "integer",
              "const": 80
            },
            "height": {
              "type": "integer",
              "const": 80
            }
          }
        },
        {
          "type": "object",
          "properties": {
            "asset_id": {
              "type": "string",
              "const": "cta_text"
            },
            "asset_type": {
              "type": "string",
              "const": "text"
            },
            "required": {
              "type": "boolean",
              "const": false
            },
            "text_type": {
              "type": "string",
              "const": "cta"
            },
            "max_length": {
              "type": "integer",
              "const": 15
            }
          }
        },
        {
          "type": "object",
          "properties": {
            "asset_id": {
              "type": "string",
              "const": "sponsored_by"
            },
            "asset_type": {
              "type": "string",
              "const": "text"
            },
            "required": {
              "type": "boolean",
              "const": false
            },
            "text_type": {
              "type": "string",
              "const": "advertiser_name"
            },
            "max_length": {
              "type": "integer",
              "const": 25
            }
          }
        },
        {
          "type": "object",
          "properties": {
            "asset_id": {
              "type": "string",
              "const": "rating"
            },
            "asset_type": {
              "type": "string",
              "const": "data"
            },
            "required": {
              "type": "boolean",
              "const": false
            },
            "data_type": {
              "type": "string",
              "const": "rating"
            },
            "scale": {
              "type": "integer",
              "const": 5
            }
          }
        }
      ]
    },
    "privacy_requirements": {
      "type": "object",
      "properties": {
        "adchoices_icon": {
          "type": "boolean",
          "const": true
        },
        "privacy_link": {
          "type": "boolean",
          "const": true
        }
      }
    }
  },
  "required": ["format_id", "type", "category", "is_standard", "iab_specification", "is_3p_served", "assets_required", "openrtb_compliance"],
  "additionalProperties": false
}