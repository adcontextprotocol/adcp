{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "/schemas/v1/enums/standard-placement-types.json",
  "title": "Standard Placement Types",
  "description": "Enumeration of standard placement type IDs for multi-size handling",
  "type": "string",
  "enum": [
    "standard_banner_multi",
    "responsive_banner",
    "native_flex",
    "video_multi_duration",
    "mobile_interstitial_multi",
    "desktop_sidebar_multi",
    "premium_responsive",
    "social_multi_format"
  ],
  "definitions": {
    "standard_banner_multi": {
      "description": "Multi-size banner placement accepting standard display sizes",
      "compatible_formats": ["display_300x250", "display_336x280", "display_320x50", "display_728x90", "display_970x250"]
    },
    "responsive_banner": {
      "description": "Responsive banner that adapts to viewport",
      "compatible_formats": ["display_300x250", "display_728x90", "display_320x50", "display_160x600"]
    },
    "native_flex": {
      "description": "Flexible native placement supporting multiple layouts",
      "compatible_formats": ["native_responsive", "native_video_card", "native_article_inline"]
    },
    "video_multi_duration": {
      "description": "Video placement accepting multiple duration formats",
      "compatible_formats": ["foundational_video_15s", "video_30s", "video_60s"]
    },
    "mobile_interstitial_multi": {
      "description": "Mobile interstitial supporting multiple sizes",
      "compatible_formats": ["mobile_interstitial_320x480", "mobile_interstitial_fullscreen"]
    },
    "desktop_sidebar_multi": {
      "description": "Desktop sidebar accepting skyscraper formats",
      "compatible_formats": ["display_160x600", "display_120x600", "display_300x600"]
    },
    "premium_responsive": {
      "description": "Premium placement with rich media options",
      "compatible_formats": ["foundational_immersive_canvas", "rich_media_expandable", "video_outstream_native"]
    },
    "social_multi_format": {
      "description": "Social media placement supporting multiple formats",
      "compatible_formats": ["video_story_vertical", "native_responsive", "display_1200x1200"]
    }
  }
}