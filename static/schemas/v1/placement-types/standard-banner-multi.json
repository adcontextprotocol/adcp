{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "/schemas/v1/placement-types/standard-banner-multi.json",
  "title": "Standard Multi-Size Banner Placement",
  "description": "Example placement type for multi-size banner handling",
  "type": "object", 
  "properties": {
    "placement_type_id": {
      "type": "string",
      "const": "standard_banner_multi"
    },
    "name": {
      "type": "string",
      "default": "Multi-Size Banner Placement"
    },
    "description": {
      "type": "string",
      "default": "Flexible banner placement accepting multiple standard display sizes with intelligent selection"
    },
    "category": {
      "type": "string",
      "const": "standard"
    },
    "format_groups": {
      "type": "object",
      "properties": {
        "primary": {
          "type": "array",
          "const": ["display_728x90", "display_300x250"]
        },
        "secondary": {
          "type": "array",
          "const": ["display_336x280", "display_970x250"]
        },
        "mobile_optimized": {
          "type": "array", 
          "const": ["display_320x50", "display_300x250"]
        }
      }
    },
    "viewport_mapping": {
      "type": "object",
      "properties": {
        "desktop": {
          "type": "array",
          "const": ["display_728x90", "display_970x250", "display_300x250"]
        },
        "tablet": {
          "type": "array",
          "const": ["display_728x90", "display_300x250", "display_336x280"]
        },
        "mobile": {
          "type": "array",
          "const": ["display_320x50", "display_300x250"]
        }
      }
    },
    "selection_strategy": {
      "type": "string",
      "const": "highest_priority"
    },
    "compatible_formats": {
      "type": "array",
      "const": [
        "display_300x250",
        "display_336x280", 
        "display_728x90",
        "display_970x250",
        "display_320x50"
      ]
    },
    "exclusions": {
      "type": "object",
      "properties": {
        "mutually_exclusive": {
          "type": "array",
          "const": [
            ["display_728x90", "display_320x50"],
            ["display_970x250", "display_320x50"]
          ]
        },
        "context_restrictions": {
          "type": "object",
          "properties": {
            "mobile": {
              "type": "array", 
              "const": ["display_728x90", "display_970x250"]
            }
          }
        }
      }
    }
  },
  "required": ["placement_type_id", "name", "category", "compatible_formats"],
  "additionalProperties": false
}